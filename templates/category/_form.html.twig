{{ form_start(form) }}
    {{ form_widget(form) }}

    {# Generate a CSRF token specific to the action #}
    {% if category is defined and category.slug is not null %}
        <input type="hidden" name="_token" value="{{ csrf_token('edit_article_' ~ category.slug) }}">
        <button type="submit" class="p-4 text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 w-full">MODIFIER</button>
    {% else %}
        <input type="hidden" name="_token" value="{{ csrf_token('add_category') }}">
        <button type="submit" class="inline-block p-4 text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 w-full">Ajouter</button>
    {% endif %}

{{ form_end(form) }}
