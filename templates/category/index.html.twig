{% extends 'base.html.twig' %}

{% block title %}Category Index{% endblock %}

{% block body %}
{# {% include 'partials/_flashBag.html.twig' %} #}
    <h1 class="text-3xl font-bold mb-4 text-center text-blue-600 ">Category Index</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.description }}</td>
                    <td>
                        <a href="{{ path('category_show', {'slug': category.slug}) }}">show</a>
                        <a href="{{ path('category_edit', {'slug': category.slug}) }}">edit</a>
                        <form method="post" action="{{ path('category_delete', {'slug': category.slug}) }}" style="display:inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button type="submit">delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}
