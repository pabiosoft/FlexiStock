{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Liste des categories</h1>

		{% for category in categories %}
			{% if category.parent == null %}
				<div class="col-md-4 m-4 ">
					<h2 class="text-3xl">
						{{ category.name }}

					</h2>
					<a href="{{ path('category_equipments', {'slug': category.slug}) }}">voir les equipments</a>

				</div>
			{% else %}
				<div class="col-md-4 m-4 ">
					<h3 class="text-2xl">
						{{ category.name }}
					</h3>
					<a href="{{ path('category_equipments', {'slug': category.slug}) }}">voir les equipments</a>

				</div>
			{% endif %}
		{% endfor %}

	</div>
{% endblock %}
