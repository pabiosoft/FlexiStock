<form method="post" action="{{ path('app_maintenance_delete', {'id': record.id}) }}" onsubmit="return confirm('Are you sure you want to delete this maintenance record?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ record.id) }}">
    <button class="btn btn-sm btn-danger" title="Delete">
        <i class="fas fa-trash"></i>
    </button>
</form>
