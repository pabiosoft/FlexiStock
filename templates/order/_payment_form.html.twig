<div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6 mb-6">
    <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-gray-200">Payment Information</h3>
    
    <form action="{{ path('payment_process', {id: order.id}) }}" method="post" class="space-y-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Payment Method</label>
            <div class="space-y-2">
                <div class="flex items-center">
                    <input type="radio" name="payment_method" value="card" id="card" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300">
                    <label for="card" class="ml-3 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Credit Card
                    </label>
                </div>
                <div class="flex items-center">
                    <input type="radio" name="payment_method" value="bank_transfer" id="bank_transfer" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300">
                    <label for="bank_transfer" class="ml-3 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Bank Transfer
                    </label>
                </div>
                <div class="flex items-center">
                    <input type="radio" name="payment_method" value="cash_on_delivery" id="cash_on_delivery" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300">
                    <label for="cash_on_delivery" class="ml-3 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Cash on delivery
                    </label>
                </div>
                <div class="flex items-center">
                    <input type="radio" name="payment_method" value="other" id="other" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300">
                    <label for="other" class="ml-3 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Other
                    </label>
                </div>
            </div>
        </div>

        <div class="pt-4">
            <button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Process Payment
            </button>
        </div>
    </form>
</div>