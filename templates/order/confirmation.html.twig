{% extends 'base.html.twig' %}

{% block title %}Order Confirmation{% endblock %}

{% block body %}
    <h1>Order Confirmation</h1>

    <p>Thank you for your order, {{ order.customer.name }}!</p>
    <p>Your order has been successfully placed and is currently {{ order.status }}.</p>
    <p>Order Number: {{ order.id }}</p>
    <p>Total Price: {{ order.totalPrice }}</p>

    <h2>Order Details</h2>
    <ul>
        {% for item in order.items %}
            <li>
                {{ item.equipment.name }} - Quantity: {{ item.quantity }} - Unit Price: {{ item.unitPrice }} - Total: {{ item.totalPrice }}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
