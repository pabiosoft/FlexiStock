{% extends 'base.html.twig' %}

{% block title %}Create Order - FlexiStock{% endblock %}

{% block body %}
{% include '_partials/_flush.html.twig' %}
    {% include '_partials/_adminav.html.twig' %}
    <main class="flex flex-col gap-4 md:gap-5 px-4 lg:px-5 lg:ml-64 h-auto pt-20 pb-5">
        <div class="px-6 py-8 lg:px-8">
            <h1 class="text-2xl font-bold text-gray-900 mb-6">Create New Order</h1>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Product Selection Panel -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-900 mb-4">Product Catalog</h2>
                        <div class="flex flex-col sm:flex-row gap-4">
                            <div class="flex-1">
                                <input type="text" 
                                    id="searchProducts" 
                                    placeholder="Search products..." 
                                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                            </div>
                            <div>
                                <select id="categoryFilter" class="w-full sm:w-auto px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                                    <option value="">All Categories</option>
                                    {% for category in categories %}
                                        <option value="{{ category.id }}">{{ category.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200" id="productList">
                                {% for equipment in equipmentList %}
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                {% if equipment.images|length > 0 %}
                                                    <img class="h-10 w-10 rounded-full object-cover" 
                                                        src="{{ asset('uploads/equipments/mini/300x300-' ~ equipment.images[0].name) }}" 
                                                        alt="{{ equipment.name }}">
                                                {% else %}
                                                    <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                                                        <i class="fas fa-box text-gray-400"></i>
                                                    </div>
                                                {% endif %}
                                                <div class="ml-4">
                                                    <div class="text-sm font-medium text-gray-900">{{ equipment.name|striptags|slice(0, 11) ~ '...' }}</div>
                                                    <div class="text-sm text-gray-500">{{ equipment.category.name|striptags|slice(0, 5) ~ '...'}}</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full 
                                                {% if equipment.stockQuantity > equipment.minThreshold %}
                                                    bg-green-100 text-green-800
                                                {% else %}
                                                    bg-red-100 text-red-800
                                                {% endif %}">
                                                {{ equipment.stockQuantity }} 
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            ${{ equipment.price|number_format(2) }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <button type="button" 
                                                onclick="addToCart({{ equipment.id }}, '{{ equipment.name }}', {{ equipment.price }})"
                                                class="text-blue-600 hover:text-blue-900">
                                                <i class="fas fa-plus-circle"></i>
                                            </button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Order Summary Panel -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Order Summary</h2>
                    
                    {{ form_start(form, {'attr': {'id': 'orderForm', 'class': 'space-y-6'}}) }}
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
                            <div>
                                {{ form_row(form.customer, {
                                    'label_attr': {'class': 'block text-sm font-medium text-gray-700'},
                                    'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}
                                }) }}
                            </div>
                            <div>
                                {{ form_row(form.supplier, {
                                    'label_attr': {'class': 'block text-sm font-medium text-gray-700'},
                                    'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}
                                }) }}
                            </div>
                        </div>

                        <div id="cartItems" class="space-y-4 mb-6">
                            <!-- Cart items will be dynamically added here -->
                        </div>

                        <div class="border-t border-gray-200 pt-4">
                            <div class="flex justify-between items-center mb-2">
                                <span class="text-sm text-gray-600">Subtotal</span>
                                <span class="text-sm font-medium text-gray-900" id="subtotal">$0.00</span>
                            </div>
                            <div class="flex justify-between items-center mb-2">
                                <span class="text-sm text-gray-600">Tax (10%)</span>
                                <span class="text-sm font-medium text-gray-900" id="tax">$0.00</span>
                            </div>
                            <div class="flex justify-between items-center mb-4">
                                <span class="text-base font-medium text-gray-900">Total</span>
                                <span class="text-base font-medium text-gray-900" id="total">$0.00</span>
                            </div>
                        </div>

                        <div class="flex justify-end space-x-3">
                            <a href="{{ path('order_list') }}" 
                                class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Cancel
                            </a>
                            <button type="submit" 
                                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Create Order
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const cart = new Map();
    const searchInput = document.getElementById('searchProducts');
    const categoryFilter = document.getElementById('categoryFilter');

    function updateTotals() {
        let subtotal = 0;
        cart.forEach((item) => {
            subtotal += item.price * item.quantity;
        });

        const tax = subtotal * 0.1;
        const total = subtotal + tax;

        document.getElementById('subtotal').textContent = `$${subtotal.toFixed(2)}`;
        document.getElementById('tax').textContent = `$${tax.toFixed(2)}`;
        document.getElementById('total').textContent = `$${total.toFixed(2)}`;
    }

    window.addToCart = function(id, name, price) {
        if (cart.has(id)) {
            const item = cart.get(id);
            item.quantity += 1;
            document.getElementById(`quantity-${id}`).value = item.quantity;
        } else {
            cart.set(id, { name, price, quantity: 1 });
            const itemHtml = `
                <div id="item-${id}" class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div>
                        <h3 class="text-sm font-medium text-gray-900">${name}</h3>
                        <p class="text-sm text-gray-500">$${price.toFixed(2)}</p>
                    </div>
                    <div class="flex items-center space-x-2">
                        <button type="button" onclick="updateQuantity(${id}, -1)"
                            class="p-1 text-gray-400 hover:text-gray-500">
                            <i class="fas fa-minus"></i>
                        </button>
                        <input type="number" id="quantity-${id}" value="1" min="1"
                            class="w-16 text-center border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                            onchange="updateQuantity(${id}, this.value - cart.get(${id}).quantity)">
                        <button type="button" onclick="updateQuantity(${id}, 1)"
                            class="p-1 text-gray-400 hover:text-gray-500">
                            <i class="fas fa-plus"></i>
                        </button>
                        <button type="button" onclick="removeFromCart(${id})"
                            class="p-1 text-red-400 hover:text-red-500">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            `;
            document.getElementById('cartItems').insertAdjacentHTML('beforeend', itemHtml);
        }
        updateTotals();
    };

    window.updateQuantity = function(id, change) {
        if (cart.has(id)) {
            const item = cart.get(id);
            const newQuantity = item.quantity + (typeof change === 'number' ? change : parseInt(change));
            if (newQuantity > 0) {
                item.quantity = newQuantity;
                document.getElementById(`quantity-${id}`).value = newQuantity;
                updateTotals();
            }
        }
    };

    window.removeFromCart = function(id) {
        if (cart.has(id)) {
            cart.delete(id);
            const element = document.getElementById(`item-${id}`);
            if (element) {
                element.remove();
            }
            updateTotals();
        }
    };

    // Search and filter functionality
    function filterProducts() {
        const searchTerm = searchInput.value.toLowerCase();
        const categoryId = categoryFilter.value;
        const rows = document.querySelectorAll('#productList tr');

        rows.forEach(row => {
            const name = row.querySelector('.text-gray-900').textContent.toLowerCase();
            const category = row.querySelector('.text-gray-500').textContent;
            const matchesSearch = name.includes(searchTerm);
            const matchesCategory = !categoryId || category.includes(categoryId);
            row.style.display = matchesSearch && matchesCategory ? '' : 'none';
        });
    }

    searchInput.addEventListener('input', filterProducts);
    categoryFilter.addEventListener('change', filterProducts);
});
</script>
{% endblock %}