{% extends 'base.html.twig' %}

{% block title %}Create Order{% endblock %}

{% block body %}
    {% include '_partials/_adminav.html.twig' %}
    <main class="flex flex-col gap-4 md:gap-5 px-4 lg:px-5 lg:ml-56 h-auto pt-20 pb-5">
        <div class="px-6 py-8 lg:px-8">
            <h1 class="text-3xl font-bold mb-6 text-gray-800">Create a New Order</h1>

            {# Flash Messages #}
            {% for message in app.flashes('error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            {# Start the Order Form #}
            {{ form_start(form, { 'attr': { 'id': 'myForm' } }) }}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {# Cart Details #}
                <div class="bg-white shadow-lg rounded-xl border border-gray-100 overflow-hidden">
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                        <h3 class="text-xl font-semibold text-gray-800">Current Cart</h3>
                    </div>
                    <div class="p-6">
                        {# Cart Table #}
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="bg-gray-100 text-gray-600">
                                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Equipment</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">QTY</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Price</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Subtotal</th>
                                        <th class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    {% set total_quantity = 0 %}
                                    {% set total_price = 0 %}
                                    {% for item in cart %}
                                        {% set total_quantity = total_quantity + item.quantity %}
                                        {% set total_price = total_price + (item.unitPrice * item.quantity) %}
                                        <tr class="hover:bg-gray-50 transition-colors">
                                            <td class="px-4 py-3 text-gray-700">{{ item.equipment.name }}</td>
                                            <td class="px-4 py-3 text-gray-700">{{ item.quantity }}</td>
                                            <td class="px-4 py-3 text-gray-700">{{ item.unitPrice|number_format(2) }}</td>
                                            <td class="px-4 py-3 text-gray-700">{{ (item.unitPrice * item.quantity)|number_format(2) }}</td>
                                            <td class="px-4 py-3 text-center">
                                                <a href="{{ path('order_remove_from_cart', { 'equipmentId': item.equipment.id }) }}" class="text-red-500 hover:text-red-700 transition-colors" aria-label="Remove item from cart">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        
                        {# Summary Section #}
                        <div class="mt-6 bg-blue-50 border border-blue-200 p-4 rounded-lg">
                            <div class="grid grid-cols-2 gap-2">
                                <div class="text-gray-600">Total Quantity:</div>
                                <div class="text-right font-semibold">{{ total_quantity }}</div>
                                <div class="text-gray-600">Subtotal:</div>
                                <div class="text-right font-semibold text-blue-700">${{ total_price|number_format(2) }}</div>
                                <div class="text-gray-600">VAT (10%):</div>
                                <div class="text-right font-semibold text-blue-700">${{ (total_price * 0.1)|number_format(2) }}</div>
                            </div>
                            <div class="mt-4 pt-2 border-t border-blue-200">
                                <div class="flex justify-between items-center">
                                    <span class="text-lg font-bold text-gray-800">Total</span>
                                    <span class="text-2xl font-bold text-blue-700">${{ (total_price * 1.1)|number_format(2) }}</span>
                                </div>
                            </div>
                        </div>

                        {# Supplier and Customer Inputs #}
                        <div class="mt-4">
                            {{ form_label(form.supplier, 'Supplier:', { 'label_attr': { 'class': 'block font-medium text-gray-700' } }) }}
                            <div class="flex items-center space-x-3">
                                {{ form_widget(form.supplier, { 'attr': { 'class': 'form-input mt-1 p-4 block w-full rounded-md shadow-sm border-gray-300' } }) }}
                                <a href="#" class="bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600 transition-colors">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="mt-4">
                            {{ form_label(form.customer, 'Customer:', { 'label_attr': { 'class': 'block font-medium text-gray-700' } }) }}
                            <div class="flex items-center space-x-3">
                                {{ form_widget(form.customer, { 'attr': { 'class': 'form-input mt-1 p-4 block w-full rounded-md shadow-sm border-gray-300' } }) }}
                                <a href="#" class="bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600 transition-colors">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </div>
                        </div>

                        <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-md hover:bg-blue-700 transition-colors text-lg font-semibold mt-6">
                            Create Invoice
                        </button>
                    </div>
                </div>

                {# Product Catalog #}
                <div class="bg-white shadow-lg rounded-xl border border-gray-100 overflow-hidden">
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                        <h3 class="text-xl font-semibold text-gray-800">Product Catalog</h3>
                        <div class="flex space-x-2">
                            <input type="text" placeholder="Search products..." class="px-3 py-2 border border-gray-300 rounded-md w-48 focus:ring-2 focus:ring-blue-500">
                            <select class="px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500">
                                <option>All Categories</option>
                                <option>Electronics</option>
                                <option>Clothing</option>
                            </select>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="bg-gray-100 text-gray-600">
                                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Sl</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Image</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Name</th>
                                        <th class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    {% for equipment in equipmentList %}
                                        <tr class="hover:bg-gray-50 transition-colors">
                                            <td class="px-4 py-3 text-gray-600">{{ loop.index }}</td>
                                            <td class="px-4 py-3">
                                                <img src="{{ asset('uploads/equipments/mini/300x300-' ~ equipment.images[0].name) }}" class="w-12 h-12 rounded-md object-cover" alt="Image of {{ equipment.name }}">
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="font-medium text-gray-800">{{ equipment.name }}</span>
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <a href="{{ path('order_add_to_cart', { 'equipmentId': equipment.id }) }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
                                                    <i class="fas fa-plus"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </main>

    {# Validation Script #}
    <script>
        $(document).ready(function () {
            $('#myForm').validate({
                rules: {
                    customer_id: { required: true },
                },
                messages: {
                    customer_id: { required: 'Please select a customer' },
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('text-red-500 text-sm mt-1 block');
                    element.closest('div').append(error);
                },
                highlight: function (element) {
                    $(element).addClass('border-red-500');
                },
                unhighlight: function (element) {
                    $(element).removeClass('border-red-500');
                },
            });
        });
    </script>
{% endblock %}
