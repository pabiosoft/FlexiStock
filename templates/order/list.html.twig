{% extends 'base.html.twig' %}

{% block title %}Orders List{% endblock %}

{% block body %}
    <h1>Orders List</h1>

    <a href="{{ path('order_create') }}" class="btn btn-success mb-3">Create New Order</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Customer</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    {# <td>{{ order.customer.username }}</td>
                    <td>{{ order.orderDate|date('Y-m-d') }}</td>
                    <td>{{ order.status }}</td> #}
                    {# <td>${{ order.totalPrice }}</td> #}
                    {# <td>
                        <a href="{{ path('order_show', {'id': order.id}) }}" class="btn btn-info btn-sm">View</a>
                        <a href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form method="POST" action="{{ path('order_delete', {'id': order.id}) }}" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td> #}
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">No orders found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
