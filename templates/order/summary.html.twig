{% extends 'base.html.twig' %}

{% block title %}Order Summary{% endblock %}

{% block body %}
    <h1>Order Summary</h1>

    <p><strong>Customer:</strong> {{ order.customer.name }}</p>
    <p><strong>Order Date:</strong> {{ order.orderDate|date('Y-m-d H:i') }}</p>
    <p><strong>Status:</strong> {{ order.status }}</p>

    <h2>Order Items</h2>
    <ul>
        {% for item in order.items %}
            <li>
                {{ item.equipment.name }} - Quantity: {{ item.quantity }} - Unit Price: {{ item.unitPrice }} - Total: {{ item.totalPrice }}
            </li>
        {% endfor %}
    </ul>

    <p><strong>Total Price:</strong> {{ order.totalPrice }}</p>
{% endblock %}
