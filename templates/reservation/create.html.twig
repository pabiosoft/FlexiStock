{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réservation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0">Nouvelle Réservation</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        
                        <div class="mb-3">
                            {{ form_label(form.equipment, 'Équipement', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.equipment, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.equipment) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.reservedQuantity, 'Quantité', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.reservedQuantity, {'attr': {'class': 'form-control', 'min': '1'}}) }}
                            {{ form_errors(form.reservedQuantity) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.reservationDate, 'Date de réservation', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.reservationDate, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.reservationDate) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.returnDate, 'Date de retour prévue', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.returnDate, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.returnDate) }}
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('app_reservation') }}" class="btn btn-secondary me-md-2">Annuler</a>
                            <button type="submit" class="btn btn-primary">Créer la réservation</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
