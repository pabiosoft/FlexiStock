{% extends 'base.html.twig' %}

{% block title %}Nouveau Fournisseur{% endblock %}

{% block body %}
    {% include '_partials/_adminav.html.twig' %}
    {% include '_partials/_flush.html.twig' %}

    <main class="flex flex-col gap-4 md:gap-5 px-4 lg:px-5 lg:ml-64 h-auto pt-20 pb-5">
        <div class="max-w-2xl mx-auto">
            <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6">
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Créer un nouveau Fournisseur</h1>
                    <a href="{{ path('supplier_index') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-lg dark:bg-gray-600 dark:hover:bg-gray-700">
                        Retour à la liste
                    </a>
                </div>

                <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6">
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        <div class="grid grid-cols-1 gap-6">
                            <div>
                                {{ form_label(form.name, 'Nom du Fournisseur', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-white'}}) }}
                                {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:text-white'}}) }}
                                {{ form_errors(form.name, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.contact, 'Personne de contact', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-white'}}) }}
                                {{ form_widget(form.contact, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:text-white'}}) }}
                                {{ form_errors(form.contact, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.email, 'Adresse e-mail', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-white'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:text-white'}}) }}
                                {{ form_errors(form.email, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.phone, 'Numéro de téléphone', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-white'}}) }}
                                {{ form_widget(form.phone, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:text-white'}}) }}
                                {{ form_errors(form.phone, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.address, 'Adresse', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-white'}}) }}
                                {{ form_widget(form.address, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:text-white', 'rows': 3}}) }}
                                {{ form_errors(form.address, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                            </div>
                        </div>

                        <div class="flex justify-end space-x-3 pt-6">
                            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:bg-blue-500 dark:hover:bg-blue-600">
                                Créer le Fournisseur
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}